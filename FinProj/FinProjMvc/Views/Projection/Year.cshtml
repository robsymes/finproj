@model FinProjMvc.ViewModels.ProjectionViewModel
@{
    ViewBag.Title = "Year";
}

<table class="date-nav">
    <tr>
        <td><a href="/Projection/Year/@ViewBag.PreviousYear"><< @ViewBag.PreviousYear</a>  </td>
        <td>
            <a href="/Projection/Decade/@ViewBag.DecadeStartYear">@ViewBag.DecadeStartYear - @ViewBag.DecadeEndYear</a>
            <h2>@ViewBag.Year</h2>
        </td>
        <td><a href="/Projection/Year/@ViewBag.NextYear">@ViewBag.NextYear >></a></td>
    </tr>
</table>

<table class="projection-year">
    <tr>
        <th></th>
        <th>Jan</th>
        <th>Feb</th>
        <th>Mar</th>
        <th>Apr</th>
        <th>May</th>
        <th>Jun</th>
        <th>Jul</th>
        <th>Aug</th>
        <th>Sep</th>
        <th>Oct</th>
        <th>Nov</th>
        <th>Dev</th>
    </tr>

    @foreach(var assetRow in Model.AssetRows) {
        <tr>
            <th><a href="@assetRow.LinkUrl">@assetRow.Name</a></th>
            
            @foreach (var value in assetRow.Values)
            {
                <td>@value</td>
            }
        </tr>
    }

    <tr>
        <th colspan="11"></th>
    </tr>

    <tr>
        <th>Cashflow:</th>
        @foreach (var value in Model.CashflowRow.Values)
        {
            <td>@value</td>
        }
    </tr>

    <tr>
        <th colspan="11"></th>
    </tr>

    <tr>
        <th>Cash:</th>
        @foreach (var value in Model.CashRow.Values)
        {
            <td>@value</td>
        }
    </tr>

    <tr>
        <th colspan="13"></th>
    </tr>

</table>
