@model FinProjMvc.Models.Asset

@{
    ViewBag.Title = "Details";
}

<h2>Payments for @Model.Name</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Payment", new { AssetId = Model.AssetId }, null)
</p>
<table class="list">
    <tr>
@*        <th>
            @Html.DisplayNameFor(model => model.AssetId)
        </th>*@
        <th>
            Date
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Payments.OrderBy(p => p.Date)) {
    <tr>
@*        <td>
            @Html.DisplayFor(modelItem => item.AssetId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Date)
            @*@item.Date.ToString("dd MMM yyyy")*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Payment", new { id=item.PaymentId }, null) |
            @Html.ActionLink("Delete", "Delete", "Payment", new { id=item.PaymentId }, null)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Asset List", "Index")
</p>