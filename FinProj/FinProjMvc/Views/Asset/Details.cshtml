@model FinProjMvc.Models.Asset

@{
    ViewBag.Title = "Details";
}

<h2>Asset Details</h2>

<fieldset>
    <legend>Asset</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Enabled)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Enabled)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
</fieldset>

<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.AssetId }) |
    @Html.ActionLink("Delete", "Delete", new { id=Model.AssetId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h2>Payments</h2>

<table class="list">
    <tr>
        <th>
            Date
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Payments.OrderBy(p => p.Date)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Payment", new { id=item.PaymentId }, null) |
                @Html.ActionLink("Delete", "Delete", "Payment", new { id=item.PaymentId }, null)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create New", "Create", "Payment", new { AssetId = Model.AssetId }, null)
</p>

<div class="panel">
    <p>
        Set the points at which the monthly asset payment changes.
    </p>
    <p>
        The other monthly payments will be automatically generated.
    </p>
</div>

